<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ProjectGuid>{27B00618-A6F2-4828-B922-05CAEB08C286}</ProjectGuid>
    <TargetFramework>net6.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <LangVersion>10</LangVersion>
    <Nullable>enable</Nullable>
    <!-- The scardot editor uses the Debug scardot API assemblies -->
    <scardotApiConfiguration>Debug</scardotApiConfiguration>
    <scardotSourceRootPath>$(SolutionDir)/../../../../</scardotSourceRootPath>
    <scardotOutputDataDir>$(scardotSourceRootPath)/bin/scardotSharp</scardotOutputDataDir>
    <scardotApiAssembliesDir>$(scardotOutputDataDir)/Api/$(scardotApiConfiguration)</scardotApiAssembliesDir>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <!-- Needed for our source generators to work despite this not being a scardot game project -->
  <PropertyGroup>
    <IsscardotToolsProject>true</IsscardotToolsProject>
  </PropertyGroup>
  <ItemGroup>
    <CompilerVisibleProperty Include="IsscardotToolsProject" />
  </ItemGroup>
  <PropertyGroup Condition=" Exists('$(scardotApiAssembliesDir)/scardotSharp.dll') ">
    <!-- The project is part of the scardot source tree -->
    <!-- Use the scardot source tree output folder instead of '$(ProjectDir)/bin' -->
    <OutputPath>$(scardotOutputDataDir)/Tools</OutputPath>
    <!-- Must not append '$(TargetFramework)' to the output path in this case -->
    <AppendTargetFrameworkToOutputPath>False</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.3.0" ExcludeAssets="runtime" PrivateAssets="all" />
    <PackageReference Include="JetBrains.Rider.PathLocator" Version="1.0.9" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <Reference Include="scardotSharp">
      <HintPath>$(scardotApiAssembliesDir)/scardotSharp.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="scardotSharpEditor">
      <HintPath>$(scardotApiAssembliesDir)/scardotSharpEditor.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\scardot.NET.Sdk\scardot.SourceGenerators\scardot.SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\..\..\glue\scardotSharp\scardot.SourceGenerators.Internal\scardot.SourceGenerators.Internal.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\scardotTools.BuildLogger\scardotTools.BuildLogger.csproj" />
    <ProjectReference Include="..\scardotTools.IdeMessaging\scardotTools.IdeMessaging.csproj" />
    <ProjectReference Include="..\scardotTools.ProjectEditor\scardotTools.ProjectEditor.csproj" />
    <ProjectReference Include="..\scardotTools.Core\scardotTools.Core.csproj" />
  </ItemGroup>
</Project>
